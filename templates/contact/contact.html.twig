{% extends 'homebase.html.twig' %}

{% block title %} Formulaire de contact {% endblock %}

{% block body %}


<div class="form_upload_video" style="margin-top:130px;margin-bottom:180px">
    {% for message in app.flashes('message') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    <h3 style="text-align: center;">Formulaire de contact </h3>
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{form_start(form, {'attr': {'class': 'contact_form'}})}}

    <div class="form-group">{{form_row(form.name, {"attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_row(form.email, {"attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_row(form.message, {"attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_widget(form)}}</div>
    <button type="submit" class="btn btn_video">Ajouter video</button>
</div>
{{form_end(form)}}
{% endblock %}
