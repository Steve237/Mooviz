{% extends 'base.html.twig' %}

{% block title %}{{video.videotitle }}{% endblock %}
{% block body %}
<div id="content-sidebar-pro" class="d-none d-md-block video-suggestions">
	<div id="content-sidebar-image">
		<img src="{{asset('images/upload/' ~ video.videoimage)}}" alt="Movie Poster" class="videoimage">
	</div>

	<div class="content-sidebar-section">
		<h2 class="content-sidebar-sub-header adjusted-recent-reviews text-center"> Vidéos recommandées</h2>
		<ul id="sidebar-reviews-pro" class="text-center">
			{% for video in videos %}
			<li>
				<a href="{{path("movie", {"id" : video.id, "idcategory": video.category.id})}}">
					<h6 class="titlevideo">{{video.videotitle}}</h6>
					<img src="{{asset('images/upload/' ~ video.videoimage)}}" alt="Movie Poster"
					class="videosuggest class=img-responsive">
				</a>
			</li>
			{% endfor %}
		</ul>
	</div><!-- close .content-sidebar-section -->
</div><!-- close #content-sidebar-pro -->

<main id="col-main-with-sidebar">
	<section class="video-container" id="myDiv">
		{% include 'video/_videoplaylist.html.twig' %}
	</section>
	<div id="movie-detail-rating">
		<div class="dashboard-container">
					<div class="video-description-block">
						<div class="video-user-info">
							{% if video.username.imageuser %}
								<img src="{{asset('images/upload/' ~ video.username.imageuser.avatar)}}"
								class="rounded-circle user-video-avatar">
							{% endif %}
							<span class="text-size">
								<a href="{{path('channel', {'id': video.username.id})}}" class="link-color">{{video.username.username}}</a>
								| Followers: {{video.username.followers | length}}
							</span>
							<ul class="list-inline">
							
							{% if is_granted('ROLE_USER') and video.username != app.user %}
							<li class="list-inline-item">
								<a href="{{path('playlist', {'idvideo': video.id, 'id': app.user.id})}}" class="js-play">
									{% if app.user and video.isSelectedByUser(app.user) %}
									<button type="button" class="btn btn-small btn-secondary btn-width">
										<i class="fas fa-star"></i>
									</button>
									{% else %}
									<button type="button" class="btn btn-small btn-secondary btn-width">
										<i class="far fa-star"></i>
									</button>
									{% endif %}
								</a>
								</li>
	
								<li class="list-inline-item">
								<a href="{{path('video_like', {'id': video.id})}}" class="js-like">
									{% if app.user and video.isLikedByUser(app.user) %}
									<button type="button" class="btn btn-small btn-secondary">
										<i class="fas fa-thumbs-up"></i>
										<span class="js-likes">{{video.videoLikes | length}}</span>
									</button>
									{% else %}
									<button type="button" class="btn btn-small btn-secondary">
										<i class="far fa-thumbs-up"></i>
										<span class="js-likes">{{video.videoLikes | length}}</span>
									</button>
									{% endif %}
								</a>
								</li>
							<li class="list-inline-item">
							{% set isFollowed = video.username.followers.contains(app.user) %}
							<button style="display: {% if not isFollowed %}block{% else %}none{% endif %}"
								class="btn btn-sm btn-primary button_follow" id="follow">
								<i class="fas fa-link"></i>
							</button>
							<button style="display: {% if isFollowed %}block{% else %}none{% endif %}"
								class="btn btn-sm btn-primary button_follow" id="unfollow">
								<i class="fas fa-unlink"></i>
							</button>
							</li>
							{% endif %}
							<li class="list-inline-item">
								<a href="{{path("second_player", {"id" : video.id, "idcategory" : video.category.id})}}">
									<button class="btn btn-primary btn-xs-small">S</button>
								</a>
							</li>
							</ul>
						</div>
					</div>
				</div>
