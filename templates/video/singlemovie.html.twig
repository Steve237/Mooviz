{% extends 'base.html.twig' %}

{% block title %}{{video.videotitle }}{% endblock %}

{% block body %}
		
		<div id="content-sidebar-pro">
			
			<div id="content-sidebar-image">
				<img src="{{asset('images/upload/' ~ video.videoimage)}}" alt="Movie Poster" class="videoimage">
			</div>
			
			<div class="content-sidebar-section">
				<h2 class="content-sidebar-sub-header adjusted-recent-reviews"> Vidéos recommandées </h2>
				<ul id="sidebar-reviews-pro">
					{% for video in videos %}
					<li>
						<a href="{{path("movie", {"id" : video.id, "idcategory": video.category.id})}}">
							<h6 class="titlevideo">{{video.videotitle}}</h6>
							<img src="{{asset('images/upload/' ~ video.videoimage)}}" alt="Movie Poster" class="videosuggest">
						</a>
					</li>
					{% endfor %}
				</ul>
				<a href="#!" class="btn btn-green-pro btn-sm">See All Reviews</a>
			</div><!-- close .content-sidebar-section -->
			
		</div><!-- close #content-sidebar-pro -->
		
		
		<main id="col-main-with-sidebar">
			<div class="videosize">
				<video id="player" controls crossorigin playsinline autoplay width=1050> 
					<source src="{{asset('videos/' ~ video.videolink)}}" type="video/mp4">
				</video>
			</div>
			
			
			<div id="movie-detail-rating">
				<div class="dashboard-container">
					<div class="row">
						<div class="videotitle">
							<h3>{{video.videotitle}}</h3>
							<strong><p>Categorie : {{video.category.categoryName}} - Date de publication : {{video.publicationdate|date("d/m/y")}} - Nombre de vues : {{video.views}} </p></strong>
						</div>
					</div><!-- close .row -->
				</div><!-- close .dashboard-container -->
			</div><!-- close #movie-detail-rating -->
			
			<div class="dashboard-container">
				<div class="movie-details-section">
					<h2>Description</h2>
					<p style="font-size:large">{{video.videodescription}}</p>
				</div><!-- close .movie-details-section -->

				<div class="movie-details-section">
					<h2 style="text-align:center;">Commentaires</h2>
				</div><!-- close .movie-details-section -->

					
				<div class="movie-details-section">
					<h2>Ajouter un commentaire</h2>
					<div class="row">
					
					</div><!-- close .row -->
				</div><!-- close .movie-details-section -->
			</div><!-- close .dashboard-container -->
		</main>
{% endblock %}
