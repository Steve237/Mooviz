<body>
	<a href="{{path('homepage')}}">
		<h3 class="share-page-site-title">Mylion</h3>
	</a>
	<main id="col-main-with-sidebar main-second-player">
		<section class="second-video-container" id="myDiv" class="video">
			{% include 'video/_videoplaylist.html.twig' %}
		</section>
		<div id="movie-detail-rating" class="secondplayer-detail-rating">
			<div class="dashboard-container">
				<div class="row">
					<div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
						<div class="video-description-block">
							<div class="video-user-info">
								<img src="{{asset('images/upload/' ~ video.username.imageuser.avatar)}}"
									class="rounded-circle user-video-avatar">
								<a href="{{path('channel', {'id': video.username.id})}}" class="link-color"><span
										class="text-size">{{video.username.username}}</span></a>
								| <span class="text-size">followers</span> : {{video.username.followers | length}}
								<span class="switch-video"><a
										href="{{path("movie", {"id" : video.id, "idcategory" : video.category.id})}}"><button
											class="btn btn-primary btn-xs-small">Switch</button></a></span>
							</div>
							{% if is_granted('ROLE_USER') and video.username != app.user %}
							<div>
								{% set isFollowed = video.username.followers.contains(app.user) %}

								<button style="display: {% if not isFollowed %}block{% else %}none{% endif %}"
									class="btn btn-sm btn-primary button_follow" id="follow">Follow
								</button>
								<button style="display: {% if isFollowed %}block{% else %}none{% endif %}"
									class="btn btn-sm btn-primary button_follow" id="unfollow">UnFollow
								</button>
							</div>
						</div>
						{% endif %}
					</div>
				</div><!-- close .row -->
			</div><!-- close .dashboard-container -->

			<div class="dashboard-container">
				<div class="movie-details-section">
					<p class="videoname">{{video.videotitle}}</p>
					<strong>
						<p class="video-data">Categorie : {{video.category.categoryName}} - Date de publication :
							{{video.publicationdate|date("d/m/y")}} - Nombre de vues : {{video.views}}</p>
					</strong>

					<div class="section_buttons_videos d-none d-md-block">
						<div class="btn-group" role="group" aria-label="Basic example">
							<a href="{{path('playlist', {'idvideo': video.id, 'id': app.user.id})}}" class="js-play">
								{% if app.user and video.isSelectedByUser(app.user) %}
								<button type="button" class="btn btn-small btn-secondary button-video-position">
									<i class="fas fa-2x fa-star"></i>
								</button>
								{% else %}
								<button type="button" class="btn btn-small btn-secondary button-video-position">
									<i class="far fa-2x fa-star"></i>
								</button>
								{% endif %}
							</a>

							<a href="{{path('video_like', {'id': video.id})}}" class="js-like">
								{% if app.user and video.isLikedByUser(app.user) %}
								<button type="button" class="btn btn-xs-small btn-secondary">
									<i class="fas fa-2x fa-thumbs-up"></i>
									<span class="js-likes">{{video.likes | length}}</span>
								</button>
								{% else %}
								<button type="button" class="btn btn-small btn-secondary">
									<i class="far fa-2x fa-thumbs-up"></i>
