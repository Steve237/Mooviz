{% extends 'base.html.twig' %}

{% block title %}Votre profil{% endblock %}

{% block body %}

{{ render(controller('App\\Controller\\UserController::userProfile'))}}


<div class="row" id="userplaylist">
  {% for playlist in playlists | slice(0, 20) %}
  <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-4">
    <div class="item-listing-container-skrn video-card video-card-text">
      <a href="{{path("movie", {"id" : playlist.video.id, "idcategory" : playlist.video.category.id})}}"><img
          src="{{asset('images/upload/' ~ playlist.video.videoimage)}}" alt="Listing" class="imagemovie"></a>
      <div class="item-listing-text-skrn">
        <div class="item-listing-text-skrn-vertical-align">
          <h6 class="videolist-title"><a
              href="{{path("movie", {"id" : playlist.video.id, "idcategory" : playlist.video.category.id})}}">{{playlist.video.videotitle}}</a>
          </h6>
          <div class="avatar-position">
            <img src="{{asset('images/upload/' ~ playlist.video.username.imageuser.avatar)}}"
              class="rounded-circle avatar-height" id="width-avatar">
            <a href="{{path('channel', {'id': playlist.video.username.id})}}"
              class="link-color">{{playlist.video.username.username}}</a> | {% if playlist.video.views is not null %}
            Vues : {{playlist.video.views}} {% else %} Aucune vue {% endif %}
          </div>
        </div><!-- close .item-listing-text-skrn-vertical-align -->
      </div><!-- close .item-listing-text-skrn -->
    </div><!-- close .item-listing-container-skrn -->
  </div><!-- close .col -->
  {% endfor %}
</div><!-- close .row -->

<div class="pagination">
  <div class="navigation">
      <button class="btn btn-primary" id="loadMoreUserPlaylist">Load more</button>
  </div>
</div>
</div><!-- close .dashboard-container -->
</main>

{% endblock %}

{% block javascripts %}
{{ parent()}}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
	click = 0;
	function loadMoreUserPlaylist(event) {
		event.preventDefault();
		click++;
		var start = 20 * click;
		const url = "{{path('loadMoreUserPlaylist')}}/" + start;
		axios.get(url).then(function (response) {
			$("#userplaylist").append(response.data);
		}).catch(function (error) {
			if (response.status === 403) {
				window.alert("You are not authorized to perform this action!");
			} else if (response.status === 404) {
				window.alert("This page does not exist");
			} else {
				window.alert("An error has occurred !");
			}
		});
	}
	document.getElementById("loadMoreUserPlaylist").addEventListener("click", loadMoreUserPlaylist);
</script>
{% endblock %}
