{% extends 'base.html.twig' %}

{% block title %}Votre profil{% endblock %}

{% block body %}

{{ render(controller('App\\Controller\\UserController::userProfile'))}}

<h6>Vos chaines.</h6>

<div class="row">
    {% for followed in user.following %}
    {% for avatar in avatars %}
    <div class="col-12 col-md-6 col-lg-6 col-xl-4">
        <div class="item-listing-container-skrn">
            <a href="{{path('channel', {'id': followed.id})}}"><img src="{{asset('images/avatar/' ~ avatar.avatar)}}"
                    alt="Listing" class="imagemovie"></a>
            <div class="item-listing-text-skrn">
                <div class="item-listing-text-skrn-vertical-align">
                    <h6><a href="{{path('channel', {'id': followed.id})}}">{{followed.username}}</a></h6>
                    <div>
                        <img src="{{asset('images/avatar/' ~ followed.imageuser.avatar)}}" class="rounded-circle" style="width:35px;height:35px;">
                    </div>
                </div><!-- close .item-listing-text-skrn-vertical-align -->
            </div><!-- close .item-listing-text-skrn -->
        </div><!-- close .item-listing-container-skrn -->
    </div><!-- close .col -->
    {% endfor %}
    {% endfor %}
</div><!-- close .row -->
<div class="pagination">
    <div class="navigation">
        {{knp_pagination_render(userChannel)}}
    </div>
</div>
</div><!-- close .dashboard-container -->
</main>
{% endblock %}