<div id="content-sidebar-pro" class="block-suggestion">
			
    <div id="content-sidebar-info">
        {% if avatars %}
        {% for avatar in avatars %}
            <img src="{{asset('images/avatar/' ~ avatar.avatar)}}" alt="avatar" class="avatar-image">
        {% endfor %}
        {% else  %}
            <img src="{{asset('images/avatar/image_profile_default.png')}}" alt="avatar" class="avatar-image">
        {% endif %}
        <div id="profile-sidebar-name">
            <h5>{{app.user.username}}</h5>
        </div>
        <div id="profile-sidebar-gradient"></div>
        {% if avatars %}
            {% for avatar in avatars %}
            <a href="{{path('update_image', {'id' : avatar.id})}}" class="edit-profile-sidebar"><i class="fas fa-pencil-alt"></i></a>
            {% endfor %}
        {% else %}
            <a href="{{path('avatar_update')}}" class="edit-profile-sidebar"><i class="fas fa-pencil-alt"></i></a>
        {% endif %}
    </div>
    
</div><!-- close #content-sidebar-pro -->

<main id="col-main-with-sidebar">
    
    <div class="dashboard-container">
        
        <ul class="dashboard-sub-menu">
            <li><a href="{{path('add_video')}}"><span class="link">Vos vidéos</span></a></li>
            <li><a href="{{path('userprofile')}}"><span class="link">Nouveautés</span></a></li>
            <li><a href="{{path('user_playlist')}}"><span class="link">Playlist</span></a></li>
        </ul><!-- close .dashboard-sub-menu -->