{% extends 'base.html.twig' %}

{% block title %} Ajouter video {% endblock %}

{% block body %}

<p class="title_admin_video"> Ajoutez une vidéo </p>

<div class="container">
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

<div class="form_upload_video">
    <div class="progress invisible" id="progress-bar">
        <div class="progress-bar"></div>
    </div>
    <div id="uploadStatus"></div>
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{form_start(form,  {"attr" : {'id':'uploadForm'}})}}

    <div class="form-group">{{form_row(form.videotitle, {"label":"Titre", "attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_row(form.videodescription, {"label":"Description", "attr" : {'class':'form-control contact-form','rows':'5'}})}}</div>
    <div class="form-group">{{form_row(form.videoimage, {"label":"Image (formats autorisés: jpeg, jpg, png)", "attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_row(form.videolink, {"label":"Video (format autorisé:mp4)", "attr" : {'class':'form-control'}})}}</div>
    <div class="form-group">{{form_row(form.category, {'label': 'Catégories', 'placeholder':'Sélectionnez une catégorie', "attr" : {'class':'form-control', 'required':'required'}})}}</div>
    <div class="form-group">{{form_widget(form)}}</div>
    <button type="submit" class="btn btn_video" onclick="changeClass()">Ajouter video</button>
    </div>
</div>
</div>
</div>
{{form_end(form)}}
{% endblock %}
