{% extends 'base.html.twig' %}

{% block title %} Modification utilisateur {% endblock %}

{% block body %}
    
    <div class="form_update_user">
    <h6 class="form_title">Formulaire de modification</h6>
    <form action="{{path('update_user', {'id': user.id})}}" method="post">
        {% for message in app.flashes('user_exist') %}
        <div class="alert alert-danger">
            {{message}}
        </div>
        {% endfor %}
        {% for message in app.flashes('email_exist') %}
        <div class="alert alert-danger">
            {{message}}
        </div>
        {% endfor %}
        <div class="form-group">
          <label for="username">Nom d'utilisateur</label>
          <input type="text" class="form-control" id="username" name="username" required="required" value="{{user.username}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" required="required" value="{{user.email}}">
        </div>
        <div class="form-group">
            <label for="role">Rôle</label>
            <select name="roles" id="role" required="required" class="form-control">
                <option value="">Sélectionnez un rôle</option>
                <option name="ROLE_USER" value="ROLE_USER">ROLE_USER</option>
                <option name="ROLE_ADMIN" value="ROLE_ADMIN">ROLE_ADMIN</option>
            </select>
          </div>
        <button type="submit" class="btn btn-primary button_update_user">Soumettre</button>
      </form>
      </div> 
{% endblock %}











