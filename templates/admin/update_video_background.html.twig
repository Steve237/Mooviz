{% extends 'base.html.twig' %}

{% block title %} Modifier vidéo {% endblock %}

{% block body %}

<p class="title_admin_video"> Modifier la vidéo </p>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="form_upload_video">
                <div class="progress invisible" id="progress-bar">
                    <div class="progress-bar"></div>
                </div>
                <div id="uploadStatus"></div>
                {{form_start(videoBackgroundForm,  {"attr" : {'id':'background_video_update'}}, {'action': path('update_video_background', {'id': video.id}), 'method': 'POST'})}}

                <div class="form-group">
                    {{form_row(videoBackgroundForm.videotitle, {"label":"Titre", "attr" : {'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(videoBackgroundForm.videodescription, {"label":"Description", "attr" : {'class':'form-control', 'rows':'5'}})}}
                </div>
                <div class="form-group">
                    {{form_row(videoBackgroundForm.videolink, {"label" : "Vidéo (format autorisé: mp4)", "attr" : {'class':'form-control-file text-truncate', 'placeholder': video.videolink}})}}
                </div>
                <div class="form-group">{{form_row(videoBackgroundForm.category, {"attr" : {'class':'form-control'}})}}
                </div>
                <div class="form-group">{{form_row(videoBackgroundForm.parutiondate, {"label" : "Date de sortie"})}}
                </div>
                <div class="form-group">{{form_row(videoBackgroundForm.videoduration, {"label" : "Durée de la vidéo"})}}
                </div>
                <button type="submit" class="btn btn-alert btn-sm btn-block btn_video" onclick="hideBar()">Ajouter video</button>
            </div>
        </div>
    </div>
</div>
{{form_end(videoBackgroundForm)}}
{% endblock %}
{% block javascripts %}
{{parent()}}

<script>
    //permet de rendre visible la barre de progrès lors du téléchargement
    function hideBar() {

        document.getElementById("progress-bar").className = "visible";
    }

    //permet d'afficher le progrès de l'upload via la barre de progrès
    $(document).ready(function () {
        // File upload via Ajax
        $("#background_video_update").on('submit', function (e) {
            e.preventDefault();
            var video_update = $(this);
            var post_url = video_update.attr('action');
            var post_data = video_update.serialize();
            $.ajax({
                xhr: function () {
                    var xhr = new window.XMLHttpRequest();
                    xhr.upload.addEventListener("progress", function (evt) {
                        if (evt.lengthComputable) {
                            var percentComplete = ((evt.loaded / evt.total) * 100);
                            $(".progress-bar").width(percentComplete + '%');
                            $(".progress-bar").html(percentComplete + '%');
                        }
                    }, false);
                    return xhr;
                },
                type: 'POST',
                url: post_url,
                data: new FormData(this),
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function () {
                    $(".progress-bar").width('0%');
                },
                error: function () {
                    $('#uploadStatus').html(
                        '<p class="upload-video-failed">Le téléchargement a échoué, merci de recommencer</p>'
                    );
                },
                success: function (resp) {
                    if (resp == 'ok') {
                        window.document.location = '/admin/success_update_video_background';
                    } else if (resp == 'err') {
                        $('#uploadStatus').html('<p class="upload-video-failed">Nous autorisons uniquement les vidéos au format mp4.</p>');
                    }
                }
            });
        });

       
    });
</script>
{% endblock %}