{% extends 'homebase.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
	<div id="content-pro">
  	 		<div class="container">
					<div class="centered-headings-pro pricing-plans-headings">
					
					{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
					{% endfor %}

					{% for message in app.flashes('success_updatepass') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
					{% endfor %}

					{% for message in app.flashes('unknown_token') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
					{% endfor %}

					{% for message in app.flashes('warning') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
					{% endfor %}
					{% for message in app.flashes('invalid_token') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
					{% endfor %}
						
					<h1>Formulaire de connexion</h1>
					</div>
			</div><!-- close .container -->
			
			<div id="pricing-plans-background-image">
				<div class="container">
						<div class="registration-steps-page-container">
							{% if error %}
								<div class="alert alert-danger">
									Les identifiants de connexion sont invalides
								</div>
							{% endif %}
							<form class="registration-steps-form size-form login-form" action="{{path('connexion')}}" method="post">
							 
							<div class="form-group">
                                    <label>Pseudo : </label>
                                    <input type="text" required name="_username" class="form-control" placeholder="Entrez votre pseudo" value="{{lastUserName}}">
                                </div>
                                <div class="form-group">
                                    <label>Password : </label>
                                    <input type="password" required name="_password" class="form-control" placeholder="Entrez votre mot de passe">
                                </div>
								<input type="hidden" name="_target_path" value="{{path('homepage')}}"/>
                                <div class="form-group last-form-group-continue">
                                    <input type="submit" class="btn btn-primary" value="continue">
								</div>
								
								<div class="clearfix"></div>
							
							 <a class="not-a-member-pro link-inscription" href="{{path('tarifs')}}">
								 Pas encore membre? <span>Inscrivez vous!</span>
							 </a>
								
							<p class="newpass"><a href="{{path('recoverypass')}}">Mot de passe oubli√©?</a></p>
							
							</form>
							
						</div><!-- close .registration-steps-page-container -->
					
				</div><!-- close .container -->
			</div><!-- close #pricing-plans-background-image -->
			
	</div><!-- close #content-pro -->
{% endblock %}