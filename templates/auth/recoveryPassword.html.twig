{% extends 'homebase.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
	<div id="content-pro" class="content-size">
			
  	 		<div class="container">
					{% for message in app.flashes('recoverypass') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
					{% endfor %}
					<div class="centered-headings-pro pricing-plans-headings">
						<h4>Récupération du mot de passe</h4>
					</div>
			</div><!-- close .container -->
			
			<div id="pricing-plans-background-image">
				<div class="container">
						<div class="registration-steps-page-container">
						
						{{form_start(form, {'attr': {'class': 'registration-steps-form recovery-form-size'}})}}
							 
								{% for message in app.flashes('unknown_mail') %}
								<div class="alert alert-danger">
									{{ message }}
								</div>
								{% endfor %}
    	  						 <div class="form-group">
									 {{form_row(form.email,{
										"attr" : {
											"placeholder":"Entrez votre adresse email",
											"class":"form-label form-control"
										},
										"label" : "Votre email"
									})}}
								</div>
                                 
                            <div class="clearfix"></div>
	  						 <div class="form-group last-form-group-continue">
	  							 <input type="submit" class="btn btn-primary" value="continue">
								 <div class="clearfix"></div>
	  						 </div>
							   {{form_widget(form)}}

						   {{form_end(form)}}
							
						</div><!-- close .registration-steps-page-container -->
					
				</div><!-- close .container -->
			</div><!-- close #pricing-plans-background-image -->
			
		</div><!-- close #content-pro -->
{% endblock %}
		
		