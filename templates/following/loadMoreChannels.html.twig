{% for followed in user.following | slice(start, 20) %}
{% for avatar in avatars %}
<a href="{{path('channel', {'id': followed.id})}}">
    <div class="col-12 col-md-6 col-sm-6 col-lg-4 col-xl-3">
        <div class="item-playlist-container-skrn video-card video-card-text">
            <a href="{{path('channel', {'id': followed.id})}}">
                <img src="{{asset('images/upload/' ~ avatar.avatar)}}" alt="avatar" class="img-responsive">
            </a>
            <div class="item-playlist-text-skrn">
                <img src="{{asset('images/upload/' ~ avatar.avatar)}}" alt="avatar" class="img-responsive">
                <h5>
                    <a href="{{path('channel', {'id': followed.id})}}">
                        Chaine de: {{followed.username}}
                    </a>
                </h5>
            </div><!-- close .item-listing-text-skrn -->
        </div><!-- close .item-playlist-container-skrn -->
    </div><!-- close .col -->
{% endfor %}
{% endfor %}