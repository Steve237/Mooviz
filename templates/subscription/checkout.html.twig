{% extends 'homebase.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block body %}


<div id="content-pro" style="height:80vh;">
  <div class="container">
    <div class="centered-headings-pro pricing-plans-headings">
      <h6>For one low monthly price</h6>
      <h1>Instantly watch TV shows &amp; Movies</h1>
    </div>
</div><!-- close .container -->

<div class="container">
  <ul id="registration-steps-pro">
    <li>
      <a href="{{path('tarif')}}">
        <div class="registration-step-circle-icon">01</div>
        <div class="registration-step-number">Etape 1</div>
        <h5 class="registration-step-title">Choisissez votre plan</h5>
      </a>
    </li>
    <li>
      <a href="#">
        <div class="registration-step-circle-icon">02</div>
        <div class="registration-step-number">Etape 2</div>
        <h5 class="registration-step-title">Créez votre compte</h5>
      </a>
    </li>
    <li class="current-menu-item">
      <a href="#">
        <div class="registration-step-circle-icon">03</div>
        <div class="registration-step-number">Step 3</div>
        <h5 class="registration-step-title">Paiement</h5>
      </a>
    </li>
    <li>
      <a href="#">
        <div class="registration-step-circle-icon">04</div>
        <div class="registration-step-number">Step 4</div>
        <h5 class="registration-step-title">Welcome to Streamtek!</h5>
      </a>
    </li>
  </ul>
  <div class="clearfix"></div>
</div>

<div class="card w-75" style="margin:auto;margin-top:50px;height:300px;">
    <div class="card-body">
      <p class="card-text">Votre inscription est réussie, vous pouvez procéder au paiement</p>
      <p class="card-text"><button id="checkout-button" class="btn btn-primary">Checkout</button></p>
    </div>
    <div id="error-message"></div>

</div>
</div>

{% endblock %}
